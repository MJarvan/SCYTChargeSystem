<Window x:Class="SCYTChargeSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCYTChargeSystem"
        mc:Ignorable="d"
        Title="LoginWindow" MinHeight="270" MaxHeight="270" Height="270" MinWidth="480" MaxWidth="480" Width="480" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
		<StackPanel HorizontalAlignment="Center" Height="Auto" Width="300" VerticalAlignment="Center">
			<WrapPanel>
				<TextBlock  Margin="20,5,20,5" FontSize="20" TextAlignment="Center">账号:</TextBlock>
				<TextBox Margin="0,5,20,5" Name="Account" FontSize="20" Width="180" MaxLength="8" InputMethod.PreferredImeState="Off" InputMethod.IsInputMethodEnabled="False"></TextBox>
			</WrapPanel>
			<WrapPanel>
				<TextBlock  Margin="20,0,20,5" FontSize="20" TextAlignment="Center">密码:</TextBlock>
				<PasswordBox Margin="0,0,20,5" Name="Password" FontSize="20" Width="180" KeyDown="Password_KeyDown"></PasswordBox>
			</WrapPanel>
			<Button Name="Confirm" Margin="50,0,20,0" FontSize="12" Padding="20,0,20,0" Click="Confirm_Click">确定</Button>
		</StackPanel>
	</Grid>
</Window>
